<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminDashboardActivity">

    <TextView
        android:id="@+id/tvPosts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Posts will be shown here"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btnFilterByDepartment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter by Department"
        android:layout_margin="16dp"
        android:layout_below="@id/tvPosts"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnFilterByUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter by User"
        android:layout_margin="16dp"
        android:layout_below="@id/btnFilterByDepartment"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
